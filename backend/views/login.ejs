<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login | meet</title>
    <link rel="stylesheet" href="login.css">
</head>
<body>
    <h2>login</h2>
    <div class="login">
      <%- include('./partials/messages') %> 
  <form id="login">
    <label>
      <b>Email</b>
      <br>
    </label>
    <input type="text" name="uemail" id="uemail" placeholder="example@gmail.com">
    <br><br>
    <label>
    <b>Password</b>
  </label>
  <input type="Password" name="Pass" id="Pass" placeholder="Password">    
        <br><br>  
        <div class="log-btn">
  <input type="submit" name="login" id="login-btn" value="login">
  </div>  
  <br><br>
  <input type="checkbox" id="check">
  <span>Remember me</span>
  <div class="password-login">
 <a href="#" id="forgot-password"><p>forgot Password</p></a>
 <a href="register" id="register"><p>sign up</p></a>
 </div>
</form>
    </div>
</body>
<script>
  const from = document.getElementById("login")

  from.addEventListener('submit', function(e){
    e.preventDefault()
    
    const data = new FormData(from)

    fetch("api/users", {method: "POST", body: JSON.stringify({
      email: data.get('uemail'),
      password: data.get('Pass')
    }), headers: {
      'content-type': 'application/json',
    }}).then(() => {
      window.location.replace('/app/dashboard')
    })
  })
</script>
</html>